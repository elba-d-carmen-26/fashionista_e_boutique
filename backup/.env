# Configuración de Base de Datos
MONGODB_URI=mongodb://localhost:27017
DATABASE_NAME=mi_aplicacion
MONGODB_USER=backup_user
MONGODB_PASSWORD=secure_password

# Configuración de Respaldos
BACKUP_PATH=./backups
BACKUP_TEMP_PATH=./temp
MAX_CONCURRENT_BACKUPS=3
DEFAULT_RETENTION_DAYS=30
MAX_BACKUP_SIZE_GB=10

# Configuración de Cifrado
ENCRYPTION_ENABLED=true
ENCRYPTION_ALGORITHM=aes-256-gcm
ENCRYPTION_KEY=tu_clave_secreta_de_32_caracteres_aqui
KEY_ROTATION_DAYS=90

# Configuración de Compresión
COMPRESSION_ENABLED=true
COMPRESSION_ALGORITHM=gzip
COMPRESSION_LEVEL=6

# Configuración de Almacenamiento Local
LOCAL_STORAGE_ENABLED=true
LOCAL_STORAGE_PATH=./backups

# Configuración de AWS S3
AWS_ENABLED=true
AWS_ACCESS_KEY_ID=tu_access_key_id
AWS_SECRET_ACCESS_KEY=tu_secret_access_key
AWS_REGION=us-east-1
AWS_BUCKET_NAME=mi-bucket-respaldos
AWS_STORAGE_CLASS=STANDARD_IA

# Configuración de Google Cloud Storage
GCP_ENABLED=false
GCP_PROJECT_ID=mi-proyecto-gcp
GCP_BUCKET_NAME=mi-bucket-gcp
GCP_KEY_FILE_PATH=./config/gcp-service-account.json
GCP_STORAGE_CLASS=NEARLINE

# Configuración de SFTP
SFTP_ENABLED=false
SFTP_HOST=mi-servidor-sftp.com
SFTP_PORT=22
SFTP_USERNAME=usuario_sftp
SFTP_PASSWORD=password_sftp
SFTP_PRIVATE_KEY_PATH=./config/sftp-private-key
SFTP_REMOTE_PATH=/backups

# Configuración de FTP
FTP_ENABLED=false
FTP_HOST=mi-servidor-ftp.com
FTP_PORT=21
FTP_USERNAME=usuario_ftp
FTP_PASSWORD=password_ftp
FTP_REMOTE_PATH=/backups
FTP_SECURE=true

# Configuración de Notificaciones por Email
EMAIL_ENABLED=true
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_SECURE=true
SMTP_USER=tu_email@gmail.com
SMTP_PASSWORD=tu_password_de_aplicacion
EMAIL_FROM=respaldos@miempresa.com
EMAIL_TO=admin@miempresa.com,ops@miempresa.com
EMAIL_SUBJECT_PREFIX=[RESPALDOS]

# Configuración de Notificaciones Slack
SLACK_ENABLED=false
SLACK_WEBHOOK_URL=https://hooks.slack.com/services/T00000000/B00000000/XXXXXXXXXXXXXXXXXXXXXXXX
SLACK_CHANNEL=#respaldos
SLACK_USERNAME=Sistema de Respaldos
SLACK_ICON_EMOJI=:floppy_disk:

# Configuración de Logging
LOG_LEVEL=info
LOG_FORMAT=json
LOG_FILE_PATH=./logs/backup.log
LOG_MAX_SIZE=10m
LOG_MAX_FILES=5
LOG_DATE_PATTERN=YYYY-MM-DD

# Configuración de Programación
SCHEDULE_FULL_BACKUP=0 2 * * *
SCHEDULE_INCREMENTAL_BACKUP=0 */6 * * *
SCHEDULE_DIFFERENTIAL_BACKUP=0 14 * * *
SCHEDULE_INTEGRITY_CHECK=0 3 * * 0
SCHEDULE_CLEANUP=0 4 1 * *

# Configuración de Monitoreo
MONITORING_ENABLED=true
MONITORING_PORT=3001
MONITORING_HOST=localhost
HEALTH_CHECK_INTERVAL=300000
METRICS_ENABLED=true
ALERTS_ENABLED=true

# Configuración de Seguridad
SECURITY_ENABLED=true
API_KEY=tu_api_key_secreta
JWT_SECRET=tu_jwt_secret_muy_seguro
SESSION_TIMEOUT=3600
MAX_LOGIN_ATTEMPTS=5
LOCKOUT_DURATION=900

# Configuración de Performance
PARALLEL_OPERATIONS=3
MEMORY_LIMIT_MB=2048
BANDWIDTH_LIMIT_MBPS=100
TIMEOUT_SECONDS=3600
RETRY_ATTEMPTS=3
RETRY_DELAY_MS=5000

# Configuración de Integridad
INTEGRITY_CHECK_ENABLED=true
CHECKSUM_ALGORITHMS=sha256,md5
VERIFY_AFTER_BACKUP=true
VERIFY_BEFORE_RESTORE=true
DEEP_VERIFICATION=false

# Configuración de Desarrollo
NODE_ENV=production
DEBUG=false
VERBOSE_LOGGING=false
DRY_RUN=false

# Configuración de Proxy (si es necesario)
HTTP_PROXY=
HTTPS_PROXY=
NO_PROXY=localhost,127.0.0.1

# Configuración de Timezone
TZ=America/Bogota

# Configuración de Backup Específica por Colección
COLLECTIONS_TO_BACKUP=users,orders,products,inventory
COLLECTIONS_TO_EXCLUDE=logs,sessions,temp_data
PRIORITY_COLLECTIONS=users,orders

# Configuración de Retención Avanzada
RETENTION_POLICY_FULL_DAYS=365
RETENTION_POLICY_INCREMENTAL_DAYS=90
RETENTION_POLICY_DIFFERENTIAL_DAYS=30
MIN_BACKUPS_TO_KEEP=5
MAX_BACKUPS_TO_KEEP=100

# Configuración de Disaster Recovery
DR_ENABLED=false
DR_SECONDARY_SITE_URL=https://dr-site.miempresa.com
DR_RTO_HOURS=4
DR_RPO_HOURS=1
DR_TEST_SCHEDULE=0 2 1 * *

# Configuración de Compliance
COMPLIANCE_MODE=false
AUDIT_LOGGING=true
IMMUTABLE_BACKUPS=false
LEGAL_HOLD=false
DATA_CLASSIFICATION=internal

# Configuración de Webhooks
WEBHOOK_ENABLED=false
WEBHOOK_URL=https://mi-webhook.com/backup-events
WEBHOOK_SECRET=mi_webhook_secret
WEBHOOK_EVENTS=backup.success,backup.failure,integrity.failure