{
  "name": "sistema-respaldo-datos",
  "version": "1.0.0",
  "description": "Sistema completo de respaldo de datos con soporte para MongoDB, múltiples proveedores de almacenamiento, cifrado, verificación de integridad y notificaciones",
  "main": "src/BackupScheduler.js",
  "scripts": {
    "start": "node src/BackupScheduler.js",
    "backup": "node examples/scripts-utiles.js backup",
    "list": "node examples/scripts-utiles.js list",
    "restore": "node examples/scripts-utiles.js restore",
    "verify": "node examples/scripts-utiles.js verify",
    "cleanup": "node examples/scripts-utiles.js cleanup",
    "stats": "node examples/scripts-utiles.js stats",
    "test": "node examples/scripts-utiles.js test",
    "test-config": "node -e \"const BackupUtils = require('./examples/scripts-utiles.js'); new BackupUtils().testConfiguration()\"",
    "install-deps": "npm install",
    "setup": "npm run install-deps && npm run test-config"
  },
  "keywords": [
    "backup",
    "mongodb",
    "database",
    "data-protection",
    "encryption",
    "integrity",
    "notifications",
    "scheduling",
    "cloud-storage",
    "disaster-recovery"
  ],
  "author": "Sistema de Respaldo ELBA",
  "license": "MIT",
  "dependencies": {
    "@google-cloud/storage": "^7.7.0",
    "archiver": "^6.0.1",
    "aws-sdk": "^2.1518.0",
    "axios": "^1.6.2",
    "basic-ftp": "^5.0.5",
    "compression": "^1.7.4",
    "cors": "^2.8.5",
    "crypto": "^1.0.1",
    "dotenv": "^16.3.1",
    "express": "^4.18.2",
    "fs-extra": "^11.2.0",
    "ftp": "^0.3.10",
    "helmet": "^7.1.0",
    "joi": "^17.11.0",
    "lodash": "^4.17.21",
    "moment": "^2.29.4",
    "mongodb": "^6.3.0",
    "node-cron": "^3.0.3",
    "node-schedule": "^2.1.1",
    "nodemailer": "^6.9.8",
    "path": "^0.12.7",
    "rate-limiter-flexible": "^4.0.1",
    "ssh2-sftp-client": "^10.0.3",
    "unzipper": "^0.10.14",
    "winston": "^3.11.0",
    "winston-daily-rotate-file": "^4.7.1"
  },
  "devDependencies": {
    "@types/node": "^20.10.5",
    "eslint": "^8.56.0",
    "jest": "^29.7.0",
    "nodemon": "^3.0.2",
    "prettier": "^3.1.1",
    "supertest": "^6.3.3"
  },
  "engines": {
    "node": ">=16.0.0",
    "npm": ">=8.0.0"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/empresa/sistema-respaldo-datos.git"
  },
  "bugs": {
    "url": "https://github.com/empresa/sistema-respaldo-datos/issues"
  },
  "homepage": "https://github.com/empresa/sistema-respaldo-datos#readme",
  "directories": {
    "docs": "docs",
    "examples": "examples",
    "src": "src",
    "config": "config"
  },
  "files": [
    "src/",
    "config/",
    "examples/",
    "docs/",
    "README.md",
    "LICENSE"
  ],
  "bin": {
    "backup-util": "./examples/scripts-utiles.js"
  },
  "config": {
    "backup_path": "./backups",
    "log_level": "info",
    "max_concurrent_backups": 3,
    "default_retention_days": 30
  },
  "jest": {
    "testEnvironment": "node",
    "collectCoverage": true,
    "coverageDirectory": "coverage",
    "coverageReporters": [
      "text",
      "lcov",
      "html"
    ],
    "testMatch": [
      "**/__tests__/**/*.js",
      "**/?(*.)+(spec|test).js"
    ]
  },
  "eslintConfig": {
    "env": {
      "node": true,
      "es2021": true,
      "jest": true
    },
    "extends": [
      "eslint:recommended"
    ],
    "parserOptions": {
      "ecmaVersion": 12,
      "sourceType": "module"
    },
    "rules": {
      "no-console": "warn",
      "no-unused-vars": "error",
      "prefer-const": "error",
      "no-var": "error"
    }
  },
  "prettier": {
    "semi": true,
    "trailingComma": "es5",
    "singleQuote": true,
    "printWidth": 80,
    "tabWidth": 2,
    "useTabs": false
  }
}
